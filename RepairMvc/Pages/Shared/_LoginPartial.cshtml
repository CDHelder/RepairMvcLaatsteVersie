@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<div class="navbar-item">
    @if (SignInManager.IsSignedIn(User))
    {
    <div class="buttons">
        <a class="button is-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>

        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </div>
    }
    else
    {
    <div class="buttons">
        <a class="button is-info" asp-area="Identity" asp-page="/Account/Register"><strong>Register</strong></a>
        <a class="button is-light" asp-area="Identity" asp-page="/Account/Login">Log in</a>
    </div>
    }
</div>