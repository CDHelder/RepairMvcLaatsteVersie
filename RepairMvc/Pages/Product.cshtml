@page "{name}"
@model RepairMvc.Pages.ProductModel
@{
}


<div>
    <p>@Model.Product.Name</p>
    <p>@Model.Product.Description</p>
    <p>@Model.Product.Price</p>
    <div>
        <label>Stock</label>
        <select>
            @foreach (var s in Model.Product.Stock)
            {
                <option value="@s.StockId">@s.Description</option>
            }
        </select>
    </div>
</div>