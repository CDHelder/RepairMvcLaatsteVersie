@page

@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    @{
        foreach (var p in Model.Products)
        {
            <a asp-page="/Pages/Product" asp-route-page="@p.Name.Replace(' ', '_')">
                @p.Name - @p.Description - @p.Price
            </a>
            <br />
        }
    }
</div>